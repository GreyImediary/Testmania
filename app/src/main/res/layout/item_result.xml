<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dimen_20dp"
    android:background="@color/colorPrimary">

    <TextView
        android:id="@+id/item_result_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto"
        android:textColor="@color/colorResultRed"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="1. Любимая запеканка Кости?" />

    <ImageView
        android:id="@+id/item_result_question_passed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:src="@drawable/ic_check"
        app:layout_constraintBottom_toBottomOf="@id/item_result_text"
        app:layout_constraintStart_toEndOf="@id/item_result_text"
        app:layout_constraintTop_toTopOf="@id/item_result_text" />

    <ImageView
        android:id="@+id/item_result_question_failed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:src="@drawable/ic_close_24dp"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@id/item_result_text"
        app:layout_constraintStart_toEndOf="@id/item_result_text"
        app:layout_constraintTop_toTopOf="@id/item_result_text" />

</androidx.constraintlayout.widget.ConstraintLayout>